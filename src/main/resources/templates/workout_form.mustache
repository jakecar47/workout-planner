<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Workout</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    {{> fragments/nav_bar}}

<!-- PAGE CONTENT -->
<div class="page-container">

    <h1 class="section-title">Create New Workout</h1>

    {{#error}}
        <p class="error-message">{{error}}</p>
    {{/error}}

    <form action="/workout_form" method="POST" class="auth-container" style="width:100%; max-width:500px;">

        <!-- WORKOUT NAME -->
        <input 
            type="text" 
            name="name" 
            placeholder="Workout Name (e.g. Push Day, Full Body)"
            required
        >

        <!-- OPTIONAL DESCRIPTION -->
        <textarea 
            name="description" 
            placeholder="Describe your workout (optional)..."
            style="height:120px; padding:12px; border-radius:6px; background:#2a2a2a; border:1px solid #444; color:white;"
        ></textarea>

        <!-- START TIME -->
        <label style="color:#ccc; margin-top:10px;">Start Time:</label>
        <input 
            type="datetime-local" 
            name="startTime"
            style="padding:12px; background:#2a2a2a; border:1px solid #444; border-radius:6px; color:white;"
        >

        <!-- END TIME -->
        <label style="color:#ccc; margin-top:10px;">End Time:</label>
        <input 
            type="datetime-local" 
            name="endTime"
            style="padding:12px; background:#2a2a2a; border:1px solid #444; border-radius:6px; color:white;"
        >

        <button type="submit">Add Workout</button>

    </form>

    <!-- BACK BUTTON -->
    <div class="center-button">
        <button class="black-button" onclick="window.location.href='/workouts'">
            Back to Workouts
        </button>
    </div>

</div>

</body>
</html>
